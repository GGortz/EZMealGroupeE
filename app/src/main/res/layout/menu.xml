<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#FFFFFF">

    <TextView
        android:id="@+id/aretape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom_appli"
        android:textSize="80dp"
        android:typeface="monospace"
        android:textColor="#007bff"
        android:textStyle="bold"
        android:layout_below="@+id/tableRow2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/bDeconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:background="@android:drawable/ic_lock_lock"
        android:backgroundTint="#48d6e6"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="onBtnClick"
        android:text="déconnexion"
        android:textColor="#000000"
        android:typeface="monospace" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/bDeconnexion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAligned="false">

        <Button
            android:id="@+id/bProfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Mon profil"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

        <Button
            android:id="@+id/bAjoutRecette"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Ajout recette"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/bCatalogue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Catalogue recettes"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

        <Button
            android:id="@+id/bCategories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Catégories"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/aretape"
        android:layout_marginTop="33dp">

        <Button
            android:id="@+id/bRecherche"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Recherche"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

        <Button
            android:id="@+id/bRechercheAvancee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#48d6e6"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="onBtnClick"
            android:text="Recherche avancée"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />

    </TableRow>


</RelativeLayout>